            <if test="className != null">
                class_name,
            </if>
            <if test="ranking != null">
                ranking,
            </if>
            <if test="blacklist != null">
                blacklist,
            </if>
            <if test="physics != null">
                physics,
            </if>
            <if test="chemistry != null">
                chemistry,
            </if>
            <if test="biology != null">
                biology,
            </if>
            
            
